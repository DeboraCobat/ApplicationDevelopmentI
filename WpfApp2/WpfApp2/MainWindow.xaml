<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name="btnRead" Content="Read" Click="btnRead_Click" Margin="5"/>
            <Button x:Name="btnCount" Content="Count" Click="btnCount_Click" Margin="5"/>
            <Button x:Name="btnWrite" Content="Write" Click="btnWrite_Click" Margin="5"/>
            <Button x:Name="btnUpload" Content="Upload" Click="btnUpload_Click" Margin="5"/>
            <Button x:Name="btnExit" Content="Exit" Click="btnExit_Click" Margin="5"/>
        </StackPanel>
        <TextBox x:Name="textBox1" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10" IsReadOnly="True"/>
        <TextBox x:Name="textBox2" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10,40,10,10"/>
        <Label x:Name="label1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <RichTextBox x:Name="richTextBox1" Grid.Row="1" VerticalAlignment="Stretch" Margin="10,100,10,10"/>
    </Grid>
</Window>
